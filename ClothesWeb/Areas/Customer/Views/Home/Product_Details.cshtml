@model Product
<div class="container mt-5 mb-5">
  <div class="row d-flex justify-content-center">
    @if (Model != null)
    {
      <div class="col-md-12">
        <div class="card">
          <div class="row">
            <div class="col-md-6">
              <div class="images p-3">
                <div class="text-center p-4"> <img id="main-image" src="@Model.ImageUrl" width="350" /></div>
                <div class="thumbnail text-center">
                  <img onclick="change_image(this)" src="@Model.ImageUrl" width="100">
                  <img onclick="change_image(this)" src="@Model.ImageUrl" width="100">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="product p-4">
                <div class="d-flex justify-content-between align-items-center">

                  @*Back to Shop page*@
                  <div class="d-flex align-items-center">
                    <a class="text-black-50" asp-area="Customer" asp-controller="Home" asp-action="Catagori">
                      <span class="ml-1">
                        <i class="fa-solid fa-arrow-left fs-10"></i>
                        Back
                      </span>
                    </a>
                  </div>
                  @*End Back to Shop page*@

                  <i class="fa fa-shopping-cart text-muted"></i>
                </div>
                <div class="mt-4 mb-3">
                  <span class="text-uppercase text-muted brand">Orianz</span>
                  <h5 class="text-uppercase">Men's slim fit t-shirt</h5>
                  <div class="price d-flex flex-row align-items-center">
                    <span class="act-price">$@Model.Price</span>
                    <div class="ml-2"> <small class="dis-price">$100</small> <span>80% OFF</span> </div>
                  </div>
                </div>
                <p class="about">@Model.Description</p>
                <div class="sizes mt-5">
                  <h6 class="text-uppercase">Size</h6> <label class="radio"> <input type="radio" name="size" value="S" checked> <span>S</span> </label> <label class="radio">
                    <input type="radio" name="size" value="M">
                    <span>M</span>
                  </label> <label class="radio">
                    <input type="radio" name="size" value="L">
                    <span>L</span>
                  </label> <label class="radio">
                    <input type="radio" name="size" value="XL">
                    <span>XL</span>
                  </label> <label class="radio">
                    <input type="radio" name="size" value="XXL"> <span>XXL</span>
                  </label>
                </div>
                <div class="cart mt-4 align-items-center">
                  <button class="btn btn-danger text-uppercase mr-2 px-4">Add to cart</button>
                  <i class="fa fa-heart text-muted"></i> <i class="fa fa-share-alt text-muted"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    }

  </div>
</div>